  "keywords": [
    "solar-time",
    "solar",
    "time",
    "sun-position",
    "local-solar-time",
    "equation-of-time",
    "astronomy",
    "daylight",
    "sun",
    "longitude",
    "latitude",
    "solar-energy",
    "solar-panel",
    "time-calculation",
    "day-of-year",
    "earth-orbit",
    "time-correction",
    "local-time",
    "solar-calculator",
    "day-angle"
  ]
